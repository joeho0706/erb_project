<!DOCTYPE html>
<html>
  <head>
    <title>Avatar Management System</title>
    <style>
      .avatar-card {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        margin: 10px;
        width: 200px;
        text-align: center;
        box-shadow: 2px 2px 6px #aaa;
      }
      .avatar-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
      }
      .avatar-card img {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>
    <h1>Welcome to the Avatar Management System</h1>
    <p>This system allows you to view and manage your avatar SVG files.</p>

    <h2>Uploaded Avatars</h2>
    <div class="avatar-grid">
      <% avatars.forEach(avatar => { %>
      <div class="avatar-card">
        <img src="<%= avatar.svg %>" alt="<%= avatar.name %>" />
        <a href="/avatars/<%= avatar._id %>"><%= avatar.name %></a>
      </div>
      <% }) %>
    </div>
    <button onclick="deleteAllAvatars()">Delete All Avatars</button>
    <script>
      function deleteAllAvatars() {
        fetch('/avatars', {
          method: 'DELETE',
        }).then((response) => {
          if (response.ok) {
            alert('All avatars have been deleted');
            window.location.reload();
          } else {
            alert('Failed to delete avatars');
          }
        });
      }
    </script>
  </body>
</html>
